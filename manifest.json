{
  "manifest_version": 3,

  "name": "newsrdr.us checker",
  "description": "Queries newsrdr.us and displays the number of unread posts in the toolbar.",
  "version": "1.4.0",

  "background": {
    "service_worker": "chrome_worker.js",
    "type": "module"
  },

  "permissions": [
    "activeTab",
    "scripting", 
    "alarms"
  ],

  "action": {},

  "host_permissions": [
    "https://newsrdr.us/"
  ],

  "icons": {
    "128": "data/icon_128.png"
  },

  "homepage_url": "https://newsrdr.us/"
}

